{
  "manifest_version": 2,

  "name": "Netflix Blocker",
  "description": "This extension halts users before they get to Netflix to make sure they really wanna waste their time",
  "version": "1.0",
  "icons": {
    "19": "img/ic-19px.png",
    "96": "img/ic-96px.png",
    "128": "img/ic-128px.png"
  },
  "browser_action": {
    "default_icon": "img/ic-96px.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://*.netflix.com/browse/*"
  ],
  "background": {
    "scripts": ["buttonFunction.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/browse/*"],
      "css": ["custom-styles.css"],
      "js": ["showShameMessage.js"],
      "run_at": "document_end"
    }
  ]
}